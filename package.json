{
  "name": "wuthering-echo",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "homepage": "https://adu014.github.io/Echo-Probability-Calculator",
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-scripts": "^3.0.1",
    "recharts": "^2.15.3",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0",
    "cross-env": "^7.0.0",
    "concurrently": "^7.0.0",
    "wait-on": "^7.0.0",
    "gh-pages": "^5.0.0"
  },
  "scripts": {
    "react-start": "cross-env NODE_OPTIONS=--openssl-legacy-provider react-scripts start",
    "electron-dev": "concurrently \"npm:react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "start": "npm run electron-dev",
    "build": "cross-env NODE_OPTIONS=--openssl-legacy-provider react-scripts build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "dist": "npx electron-builder --win --x64",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "build": {
    "appId": "com.adu014.wutheringwaves",
    "productName": "WutheringWavesEchoCalculator",
    "npmRebuild": false,
    "prune": true,
    "asar": false,
    "nodeModulesTransform": {
      "type": "hardlink"
    },
    "files": [
      "build/**/*",
      "main.js",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.ico"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
